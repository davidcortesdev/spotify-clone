---
import type { Playlist } from '@/lib/data'

interface Props {
   playlist: Playlist
}

const { playlist } = Astro.props
const { albumId, artists, color, cover, id, title } = playlist

const artistsString = artists.join(", ")
---

<a 
   href={`/playlist/${id}`}
   class="playlist-item transition-all duration-300 flex flex-col relative p-2 shadow-lg hover:shadow-xl overflow-hidden items-center gap-2 pb-2 rounded-md hover:bg-zinc-800 bg-zinc-500/30 w-44"
>
   <picture class="aspect-square w-full h-auto flex-none">
      <img 
         src={cover} 
         alt={`Portada de ${title} por ${artistsString}`}
         class="object-cover w-full h-full rounded-md"
         transition:name=`playlist ${id} image`
      />
   </picture>

   <div class="flex flex-auto flex-col px-2">
      <h4 class="text-sm">
         {title}
      </h4>

      <span class="text-xs text-gray-400">
         {artistsString}
      </span>
   </div>

</a>